<div id="<%= dom_id category %>">
    <%= category.name %>
    <%= link_to t('.edit'), edit_category_path(category) %>

    <!--con turbo para hacer paginas mas dinamicas, rails 7 ya viene instalado turbo-->
    <%= link_to t('.delete'), category_path(category), data: {
      turbo_method: :delete,
      turbo_confirm: t('common.confirm')
    }%>

</div>
